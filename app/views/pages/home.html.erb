<div class="container">
	<h1>UNM Academic Program Review</h1>
	Welcome to UNM APR website, You need to fill out the Self-Study report.
	<h2><%= link_to 'Self-Study', criteria_path %></h2>
	
	<table class="table span8" >
		<tr>
			<th>Criteria</th>
			<th>Status</th>
		</tr>
		
		<% @criteria.each do |criterion| %>
    <tr>
    	<td><b><%= criterion.title %></b><br></td>
    	<% criterion.subcriteria.each do |subcriterion|%>
    	<td>
    		<% if subcriterion.narrative == NIL %>
	    		<%= "N" %>
    		<% else %>
	    		<%= "Y" %>
    		<% end %>
   		</td>
   		<% end %>
    </tr>
    <% end %>
  	
  </table>
</div>